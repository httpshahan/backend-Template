{
  "name": "nodejs-backend-template",
  "version": "1.0.0",
  "description": "Professional, open-source Node.js backend template with Express, Sequelize, and MySQL. Ready for production use with modern Git Flow workflow.",
  "main": "src/server.js",
  "homepage": "https://github.com/httpshahan/nodejs-backend-template#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/httpshahan/nodejs-backend-template.git"
  },
  "bugs": {
    "url": "https://github.com/httpshahan/nodejs-backend-template/issues"
  },
  "scripts": {
    "start": "node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "start:dev": "NODE_ENV=development node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "dev:debug": "NODE_ENV=development nodemon --inspect src/server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "setup": "node scripts/setup-config.js",
    "setup:config": "node scripts/setup-config.js",
    "deploy:staging": "git checkout develop && git pull origin develop && npm install && npm run db:migrate",
    "deploy:production": "git checkout main && git pull origin main && npm install && npm run db:migrate",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:migrate:status": "npx sequelize-cli db:migrate:status",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:reset": "npm run db:seed:undo && npm run db:migrate:undo && npm run db:migrate && npm run db:seed",
    "branch:develop": "git checkout develop || git checkout -b develop",
    "branch:feature": "git checkout develop && git checkout -b",
    "branch:release": "git checkout develop && git checkout -b",
    "merge:develop": "git checkout develop && git merge",
    "merge:main": "git checkout main && git merge develop",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "lint:watch": "nodemon --exec \"npm run lint\" --watch src --ext js",
    "lint:help": "echo \"ESLint Documentation: docs/guides/eslint-guide.md and docs/reference/eslint-quick-reference.md\"",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "security": "node scripts/security-test.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "eslint src/ --config .eslintrc.security.js",
    "security:deps": "npm outdated && npm audit"
  },
  "keywords": [
    "nodejs",
    "express",
    "sequelize",
    "mysql",
    "rest-api",
    "backend",
    "template",
    "open-source",
    "git-flow",
    "production-ready",
    "jwt-authentication",
    "mvc-architecture"
  ],
  "author": "Shahan Ahmad (https://github.com/httpshahan)",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.2",
    "mysql2": "^3.6.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "sequelize-cli": "^6.6.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
